<h2>Latest discussion on <%= @podcast.title %></h2>

<% if @message.present? && @message.errors.any? %>
    <% @message.errors.full_messages.each do |err| %>
    <p class= "error"> <%= err %> <p class= "error"> 
    <% end %>
<% end %>    

<%= render :partial => "create" %>

<ul>
    <% @podcast.messages.each do |message| %>
    <li>"<%= message.comment %>" 
        posted at "<%= message.created_at %>" 
        by "<%= message.listener_id %>"
        
        <% if message.listener_id == @current_listener.id %>
            <%= button_to("Delete post", podcast_message_path(@podcast, message.id), :method =>"delete", :data => {:confirm => "Are you sure?"}) %>
        <% end %>
    </li>
    <% end %>
</ul>
